@bot.message_handler(commands=["start"])
def start(message):
    global CHAT_ID
    CHAT_ID = message.chat.id
    bot.send_message(
        CHAT_ID,
        "üåû –ü—Ä–∏–≤–µ—Ç!\n–Ø –±—É–¥—É –ø—Ä–∏—Å—ã–ª–∞—Ç—å —Ç–µ–±–µ –µ–∂–µ–¥–Ω–µ–≤–Ω—ã–µ –∞—Ñ—Ñ–∏—Ä–º–∞—Ü–∏–∏ –≤ 8:00 –ø–æ –ú–æ—Å–∫–≤–µ üí™"
    )

def send_daily_affirmation():
    if not CHAT_ID:
        return

    today = datetime.datetime.now(MOSCOW_TZ).date()
    day_number = (today - START_DATE).days

    if 0 <= day_number < len(affirmations):
        text = affirmations[day_number]
    else:
        text = "‚ú® –Ø –ø—Ä–æ–¥–æ–ª–∂–∞—é –¥–≤–∏–≥–∞—Ç—å—Å—è –≤–ø–µ—Ä—ë–¥ —Å —É–≤–µ—Ä–µ–Ω–Ω–æ—Å—Ç—å—é –∏ —Å–ø–æ–∫–æ–π—Å—Ç–≤–∏–µ–º."

    bot.send_message(CHAT_ID, text)

# ‚è∞ –∫–∞–∂–¥—ã–π –¥–µ–Ω—å –≤ 08:00
schedule.every().day.at("08:00").do(send_daily_affirmation)

print("‚úÖ –ë–æ—Ç —Å –∫–∞–ª–µ–Ω–¥–∞—Ä—ë–º –∞—Ñ—Ñ–∏—Ä–º–∞—Ü–∏–π –∑–∞–ø—É—â–µ–Ω")

while True:
    schedule.run_pending()
    time.sleep(30)
